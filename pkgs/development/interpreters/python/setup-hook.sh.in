addPythonPath() {
  addToSearchPathWithCustomDelimiter ':' 'PYTHONPATH' "${1}/lib/python@VERSION_MAJOR@/site-packages"
}

toPythonPath() {
  local i
  local p
  local paths
  local result

  paths="${1}"

  for i in "${paths}" ; do
    p="${i}/lib/python@VERSION_MAJOR@/site-packages"
    result="${result}${result:+:}${p}"
  done

  echo "${result}"
}

envHooks+=('addPythonPath')
