{ stdenv
, fetchgit
, fetchurl
, lib
, nasm

, enable10bit ? false
}:

# NOTE: the videolan autogenerated tarballs do not contain the latest sources.

let
  version = "2017-12-24";
in
stdenv.mkDerivation rec {
  name = "x264-${version}";

  src = fetchurl {
    url = "http://x264-${version}.tar.xz";
    multihash = "QmWnVxmQZZdutp7NyrwnWWbwRfJfM64iSeQ722ojGXeEjq";
    sha256 = "5a92cf4f18e22be582c1e11d38a7dd2f3f8193b724508c723b2ee1adbbc6ea65";
  };

  nativeBuildInputs = [
    nasm
  ];

  postPatch = ''
    patchShebangs ./configure
    patchShebangs ./version.sh
  '';

  configureFlags = [
    "--enable-shared"
    "--disable-win32thread"
    "--disable-interlaced"
    "--bit-depth=${
      if enable10bit then
        "10"
      else
        "8"
    }"
    "--chroma-format=all"
    "--enable-pic"
    "--disable-avs"
    "--disable-swscale"
    "--disable-lavf"
    "--disable-ffms"
    "--disable-gpac"
    "--disable-lsmash"
  ];

  passthru = {
    generateDistTarball = stdenv.mkDerivation rec {
      name = "x264-${version}";

      src = fetchgit {
        version = 5;
        url = "https://git.videolan.org/git/x264.git";
        rev = "b00bcafe53a166b63a179a2f41470cd13b59f927";
        sha256 = "07b57bf65742fd6f1991f133eaafe1edeb56b8b017a5f2ee397ae70630d8bf46";
      };

      configurePhase = ":";

      buildPhase = ''
        tar -Jcvf x264-${version}.tar.xz ../x264*/*
      '';

      installPhase = ''
        install -D -m644 -v 'x264-${version}.tar.xz' \
          "$out/x264-${version}.tar.xz"
      '';
    };
  };

  meta = with lib; {
    description = "Library for encoding h.264/AVC video streams";
    homepage = https://www.videolan.org/developers/x264.html;
    license = licenses.gpl2;
    maintainers = [
      codyopel
    ];
    platforms = with platforms;
      x86_64-linux;
  };
}
