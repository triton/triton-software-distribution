{ stdenv
, fetchFromGitLab
, lib
, nasm
}:

# NOTE: the videolan autogenerated tarballs do not contain the latest sources.

let
  date = "2019-03-14";
in
stdenv.mkDerivation rec {
  name = "x264-${date}";

  src = fetchFromGitLab {
    version = 6;
    host = "https://code.videolan.org";
    owner = "videolan";
    repo = "x264";
    rev = "5493be84cdccecee613236c31b1e3227681ce428";
    sha256 = "cf9a998bddf11983607adad429720d19ae1927d6b6b8cb32458a90c48ab5f356";
  };

  nativeBuildInputs = [
    nasm
  ];

  postPatch = ''
    patchShebangs configure
    patchShebangs version.sh
  '';

  configureFlags = [
    "--enable-shared"
    "--disable-win32thread"
    "--disable-interlaced"
    "--bit-depth=all"
    "--chroma-format=all"
    "--enable-pic"
    "--disable-avs"
    "--disable-swscale"
    "--disable-lavf"
    "--disable-ffms"
    "--disable-gpac"
    "--disable-lsmash"
  ];

  meta = with lib; {
    description = "Library for encoding h.264/AVC video streams";
    homepage = https://www.videolan.org/developers/x264.html;
    license = licenses.gpl2;
    maintainers = [
      codyopel
    ];
    platforms = with platforms;
      x86_64-linux;
  };
}
